extends layout

block content
    .container.form_content
        h4.text-center Add a new animal to #{countries.name}
        form(method='POST', action="/countries/edit/"+countries._id)
            #form-group
                label Select a Animal:
                br
                select.form-control(name='dropDown', id='')
                    each val in [...animals]
                        option(name="animal", value=val.type) #{val.type}
            
            input.btn.btn-dark.btn-lg.mt-3.btn-block(type='submit', value='submit')
            
